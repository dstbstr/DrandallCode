    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) IncludeCounter",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/IncludeCounter.exe",
            "args": [
                "-r",
                "-f",
                "Drandall",
                "${workspaceFolder}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(Windows) TypeCounter",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/TypeCounter.exe",
            "args": [
                "-r",
                "${workspaceFolder}",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "TodoManager",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/TodoManager.exe",
            "args": [
                "-r",
                "CommandParser",
                "Core",
                "ExtractorLib",
                "IncludeCounter",
                "ReportGenerator",
                "TypeCounter"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(Windows) Run Tests: CommandParser",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/CommandParserTest.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": []
        },
        {
            "name": "(Windows) Run Tests: ExtractorLib",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/ExtractorLibTest.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": []
        }
    ]
}