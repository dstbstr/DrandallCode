{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GenerateWindowsDebug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command": "cmake -G 'Visual Studio 15 2017 Win64' .."
        },
        {
            "label": "GenerateWindowsRelease",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command": "cmake -G 'Visual Studio 15 2017 Win64' .."
        },
        {
            "label": "GenerateNixDebug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command": "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
        },
        {
            "label": "GenerateNixRelease",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command": "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Release .."
        },
        {
            "label": "buildWindowsDebug",
            "type": "shell",
            "command": "cmake --config Debug --build .",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "dependsOn": [
                "GenerateWindowsDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "buildNixDebug",
            "type": "shell",
            "command": "cmake --build .",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "dependsOn": [
                "GenerateNixDebug"
            ],
            "group": "build"
        },
        {
            "label": "buildWindowsRelease",
            "type": "shell",
            "command": "cmake --config Release --build .",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "dependsOn": [
                "GenerateWindowsRelease"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "buildNixRelease",
            "type": "shell",
            "command": "cmake --build .",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "dependsOn": [
                "GenerateNixRelease"
            ],
            "group": "build"
        }
    ]
}